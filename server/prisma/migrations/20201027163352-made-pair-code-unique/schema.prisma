datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @default(autoincrement()) @id
  email   String   @unique
  password String
  name    String?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
  createdPair Pair? @relation("CreatorUser")
  joinnedToPair Pair? @relation("JoinnerUser")
}

model Pair {
  id Int @default(autoincrement()) @id
  pair1_id Int
  pair2_id Int?
  creator User @relation("CreatorUser", fields: [pair1_id], references: [id])
  joinner User? @relation("JoinnerUser", fields: [pair2_id], references: [id])
  connection_code String? @unique
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
}