datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @default(autoincrement()) @id
  email   String   @unique
  name    String?
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
  createdPair Pair? @relation("CreatorUser")
  joinnedToPair Pair? @relation("JoinnerUser")
}

model Pair {
  id Int @default(autoincrement()) @id
  pair1_id Int
  pair2_id Int?
  creator User @relation("CreatorUser", fields: [pair1_id], references: [id])
  joinner User? @relation("JoinnerUser", fields: [pair2_id], references: [id])
  connection_code String? @unique
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
  lists List[] @relation("BelongsToPair")
}

model List {
  id Int @default(autoincrement()) @id
  name String
  belongs_to Int
  belongsTo Pair @relation("BelongsToPair", fields: [belongs_to], references: [id])
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
  items Item[] @relation("BelongsToList")
}

model Item {
  id Int @default(autoincrement()) @id
  name String
  quantity Int @default(1)
  belongs_to Int
  belongsTo List @relation("BelongsToList", fields: [belongs_to], references: [id])
  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
}